<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns="sap.m"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<!--<l:HorizontalLayout class="date">-->
	<!--	<Label class="datelabel" text="Date:"/>-->
	<!--	<DatePicker class="date" dateValue="{/date}"/>-->
	<!--</l:HorizontalLayout>-->
	<Table id="AdminVisitor" inset="true" items="{ path: 'oAdminModel>/getPreregister'}">
		<headerToolbar>
			<OverflowToolbar>
				<content>
					<Title text="Pre Registered Visitors" level="H3"/>
					<ToolbarSpacer width="43%"></ToolbarSpacer>
					<Label text="Select Employee:"></Label>
					<ComboBox id="idPerID" selectedKey="{oAdminModel>/selectedEid}" items="{oAdminModel>/getEmployeeList}">
					<core:Item text="{oAdminModel>name}" key="{oAdminModel>eId}"></core:Item>
					</ComboBox>
					<Button icon="sap-icon://synchronize" tooltip="Refresh" type="Ghost" press="onRefreshPreReg"></Button>
					<Button text="Add Visitor +" type="Emphasized" press="onAdd"></Button>
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
				<Text text="{i18n>visId}"/>
			</Column>
			<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
				<Text text="{i18n>Name}"/>
			</Column>
			<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
				<Text text="{i18n>Email}"/>
			</Column>
			<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
				<Text text="{i18n>Contact}"/>
			</Column>
			<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
				<Text text="{i18n>Purpose}"/>
			</Column>
			<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
				<Text text="{i18n>Organisation}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem >
				<cells>
					<Text text="{oAdminModel>vhId}"></Text>
					<Text text="{oAdminModel>visitorName}"></Text>
					<Text text="{oAdminModel>email}"></Text>
					<Text text="{oAdminModel>contactNo}"></Text>
					<Text text="{oAdminModel>puprose}"></Text>
					<Text text="{oAdminModel>organisation}"></Text>
					<!--<Toolbar style="Clear">-->
						<!--<Button tooltip="Edit Visitor Details" icon="sap-icon://edit-outside" type="Accept"></Button>-->
					<!--	<Button tooltip="Delete Visitor" icon="sap-icon://delete" type="Reject"></Button>-->
					<!--	<Button tooltip="Expand" icon="sap-icon://navigation-right-arrow" press="onExpandPreRegVis"></Button>-->
					<!--</Toolbar>-->
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>